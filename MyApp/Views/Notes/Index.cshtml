@model IEnumerable<MyApp.Models.Note>

@{
    ViewBag.Title = "Notes";
}

<h2>Notes</h2>

<p>
    <a class="btn btn-primary" href="/Notes/Create">New</a>
</p>
<table class="table">
    <tr>
        <th>
            Titre
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <a href="/Notes/Details/@item.NoteId">
                    @item.Title
                </a>
            </td>
            <td>
                <a class="btn btn-warning" href="/Notes/Edit/@item.NoteId">Edit</a> |
                <a class="btn btn-danger" href="/Notes/Delete/@item.NoteId">Delete</a>
            </td>
        </tr>
    }

</table>
